\definecolor{foreground}{RGB}{196,196,196}
\definecolor{text}{RGB}{177,177,177}
\definecolor{kevcazblue}{RGB}{126,182,214}  %rgb(126,182,155)
\definecolor{kevcazred}{RGB}{224, 128, 163}
\definecolor{kevcazgreen}{RGB}{212,224,155}

\setbeamercolor{normal text}{fg=text}
\setbeamercolor{frametitle}{fg=foreground}
\setbeamercolor{framesubtitle}{fg=kevcazblue}

\setbeamercolor{title}{fg=kevcazblue}
\setbeamercolor{subtitle}{fg=foreground}

\setbeamercolor{alerted text}{fg=kevcazred}
\setbeamercolor{structure}{fg=kevcazblue}

\setbeamercolor{footlinecolor}{fg=kevcazblue}
\setbeamercolor{section in head/foot}{fg=foreground}

%%%%%%%%%%% Block color sets %%%%%%%%%%%%%%%%

% Standard block
\setbeamercolor{block title}{fg = kevcazblue, bg = kevcazblue!50}
\setbeamercolor{block body}{bg = kevcazblue!40}

% Alert block
\setbeamercolor{block title alerted}{fg = kevcazred, bg = kevcazred!50}
\setbeamercolor{block body alerted}{ bg = kevcazred!40}

% Example block
\setbeamercolor{block title example}{fg = black!15!kevcazgreen!85!, bg = kevcazgreen!50}
\setbeamercolor{block body example}{ bg = kevcazgreen!40}

\setbeamercolor{background canvas}{bg=black}
\setbeamertemplate{background}{
		\ifnum\c@framenumber=1%
        \pgfuseimage{bg}
    \else%
    \fi%
